@model IEnumerable<CMS.Domain.Models.Albums>

@{
    ViewBag.Title = "AllAlbums";
    Layout = "~/Views/Admin/_Layoutadmin.cshtml";
}

<h2>Альбомы</h2>

<p>
    @Html.ActionLink("Создать новый", "AddAlbum")
</p>
<table class="table" border="1">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Name)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Description)
        </th>
        <th></th>
    </tr>
    if(Model.Count>0)
    {
        @foreach (var item in Model)
        {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Description)
            </td>
            <td>
                @Html.ActionLink("Удалить фотоальбом", "DeleteAlbum", new { id = item.id })
            </td>
            <td>
                @Html.ActionLink("Добавить фото в альбом", "AddPhoto", new { id = item.id })
            </td>
        </tr>
        }
    }
    else
    {
       @Html.Label("Нет ни одного альбома")
    }

</table>

