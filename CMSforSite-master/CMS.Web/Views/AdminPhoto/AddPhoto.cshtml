@model CMS.Domain.Models.Photos

@{
    ViewBag.Title = "AddPhoto";
    Layout = "~/Views/Admin/_Layoutadmin.cshtml";
}

<h2>AddPhoto</h2>

@using (Html.BeginForm("AddPhoto", "AdminPhoto",
         FormMethod.Post, new { enctype = "multipart/form-data" }))
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
        <h4>Добавление фотографий</h4>
        <hr />

        <div class="form-group">

            Добавить файл:
            <div class="col-md-10">
                <input type="file" name="Image" />
            </div>
        </div>

        <div class="form-group">
            Добавть описание:
            <div class="col-md-10">
                @Html.EditorFor(m => m.Description)
                @Html.ValidationMessageFor(m => m.Description)
            </div>
        </div>


        <div class="form-group">
            Альбом:
            <div class="col-md-10">
                @Html.DropDownListFor(model => model.Albumsid, ViewBag.Albums as SelectList)
            </div>
        </div>
        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Добавить фото" class="btn btn-default" />
            </div>
        </div>
    </div>
}
<div>
    @Html.ActionLink("Вернуться к альбомам", "AllAlbums")
</div>
