@model IList<CMS.Domain.Categories> 

<!-- Widget to display categories in sidebar -->
<div class="sidebar">
    <h3>Места</h3>

    @if (Model.Count > 0)
    {
        <ul>
            @foreach (var category in Model)
            {
                <li>@Html.CategoryLink(category)</li>
            }
        </ul>
    }
    else
    {
        <p>Не заведено ни одного места во Вьетнаме!</p>
    }
</div>