﻿@model IList<CMS.Domain.Models.Photos>
<style type="text/css">
    .slideshow {
        width: 580px;
        height: 400px;
        margin: auto;
    }

    .slideshow img {
        padding: 15px;
        border: 1px solid #ccc;
        background-color: #eee;
           
           
    }
</style>
<!-- include Cycle plugin -->
<script src="@Url.Content("~/Scripts/jquery.cycle.all.js")" type="text/javascript"></script>
<script type="text/javascript">
    $(document).ready(function () {
        $('.slideshow').cycle({
            fx: 'fade',
            speed: 'slow',
            timeout: 5000,
            next: '.slideshow',
            prev: '#prev'
        });

    });
</script>
<div class="slideshow">
    @if (Model != null)
    {
        foreach (var image in Model)
        {
            <div id="over" style="position: absolute; width: 100%; height: 100%;float:left ">
                @Html.Raw("<img  style='width:580px; height:380px;' src=\"data:image/jpeg;base64,"
                          + Convert.ToBase64String(image.Photo) + "\" />")
            </div>
        }
    }
</div>